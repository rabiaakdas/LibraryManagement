@model LibraryManagement.Web.Entity.Book

<div class="card mb-3">
    <div class="row">
        <div class="col-md-3">

            <img src="/img/@Model.ImageUrl" alt="@Model.Title" style="width: 150px; height: 200px; object-fit: cover;" />

        </div>
        <div class="col-md-9">
            <div class="card-body">
                <h5 class="card-title">@Model.Title</h5>
               

                <div>
                    <a class="btn btn-outline-info" asp-controller="Books" asp-action="Details" asp-route-id="@Model.BookId">Detaylar</a>
                   
                    <form asp-controller="Cart" asp-action="UpdateQuantity" method="post" style="display:inline;">
                        <input type="hidden" name="BookId" value="@Model.BookId" />
                        <input type="hidden" name="quantity" value="1" /> 
                        <button type="submit" class="btn btn-outline-secondary">Sepete Ekle</button>
                    </form>

                    <!-- Favori kalp butonu -->
                    <button type="button" class="btn btn-link p-0 add-to-favorites" data-id="@Model.BookId">
                        <i class="bi bi-heart" style="font-size:1.5rem; color:red;"></i>
                    </button>

                </div>

            </div>
        </div>
    </div>
</div>
