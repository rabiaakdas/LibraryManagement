@model LibraryManagement.Web.Entity.Book

<div class="card mb-3">
    <div class="row">
        <div class="col-md-3">

            <img src="/img/@Model.ImageUrl" alt="@Model.Title" style="width: 150px; height: 200px; object-fit: cover;" />

        </div>
        <div class="col-md-9">
            <div class="card-body">
                <h5 class="card-title">@Model.Title</h5>
                <p class="card-text"><strong>Yazar:</strong> @Model.Author</p>
                <p class="card-text"><strong>Sayfa Sayısı:</strong> @Model.PageCount</p>
                <p class="card-text"><strong>Fiyat:</strong> @Model.Price.ToString("C")</p>


            </div>
        </div>
    </div>
</div>
