@model LibraryManagement.Web.Models.AddressViewModel

@{
    ViewData["Title"] = "Adres Düzenle";
}

<h2>Adres Düzenle</h2>

<form asp-action="EditAddress" asp-controller="Profiles" method="post">
    @* Id gizli alan olarak gönderiyoruz *@
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Title" class="form-label">Adres Başlığı</label>
        <input asp-for="Title" class="form-control" placeholder="Örn: Ev, İş, Yazlık" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="City" class="form-label">İl</label>
        <input asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="District" class="form-label">İlçe</label>
        <input asp-for="District" class="form-control" />
        <span asp-validation-for="District" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ZipCode" class="form-label">Posta Kodu</label>
        <input asp-for="ZipCode" class="form-control" />
        <span asp-validation-for="ZipCode" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="FullAddress" class="form-label">Detaylı Adres</label>
        <textarea asp-for="FullAddress" class="form-control" rows="3"></textarea>
        <span asp-validation-for="FullAddress" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Güncelle</button>
    <a asp-action="Address" asp-controller="Profiles" class="btn btn-secondary">İptal</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
