@model RegisterViewModel
@{
    ViewData["HideNavbar"] = true;
    ViewData["Title"] = "Kayıt Ol";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<style>
    body {
        background: linear-gradient(135deg, #6a11cb, #2575fc);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: 'Segoe UI', sans-serif;
    }

    .register-card {
        border-radius: 20px;
        padding: 40px;
        background: rgba(255,255,255,0.95);
        box-shadow: 0 15px 40px rgba(0,0,0,0.2);
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .register-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 20px 50px rgba(0,0,0,0.25);
        }

        .register-card h2 {
            position: relative;
            font-weight: bold;
            margin-bottom: 30px;
            color: #0d6efd;
        }

            .register-card h2::after {
                content: '';
                display: block;
                width: 60px;
                height: 3px;
                background: #0d6efd;
                margin: 8px auto 0;
                border-radius: 2px;
            }

    .form-control:focus {
        box-shadow: none;
        border-color: #0d6efd;
    }

    .btn-register {
        border-radius: 50px;
        padding: 12px 20px;
        font-weight: bold;
        background: linear-gradient(135deg, #6a11cb, #2575fc);
        border: none;
        transition: all 0.3s;
        color: #fff;
    }

        .btn-register:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 20px rgba(0,0,0,0.2);
        }

    .input-group-text {
        background-color: #0d6efd;
        color: #fff;
        border: none;
        border-top-left-radius: 50px;
        border-bottom-left-radius: 50px;
    }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="register-card">
                <h2><i class="bi bi-person-plus-fill me-2"></i>Kayıt Ol</h2>

                <form asp-action="Register" method="post">
                    <div class="mb-3 input-group">
                        <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                        <input asp-for="Username" class="form-control" placeholder="Kullanıcı Adı" />
                    </div>
                    <span asp-validation-for="Username" class="text-danger small"></span>

                    <div class="mb-3 input-group">
                        <span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
                        <input asp-for="Email" class="form-control" placeholder="Email" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger small"></span>

                    <div class="mb-4 input-group">
                        <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                        <input asp-for="Password" class="form-control" placeholder="Şifre" type="password" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger small"></span>

                    <button type="submit" class="btn btn-register w-100 mb-3">Kayıt Ol</button>

                    <p class="text-center text-muted">
                        Zaten hesabınız var mı? <a asp-controller="Users" asp-action="Login">Giriş Yap</a>
                    </p>
                </form>
            </div>
        </div>
    </div>
</div>
